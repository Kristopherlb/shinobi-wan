{
  "name": "ir",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ir/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsup",
        "cwd": "{projectRoot}"
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "eslintConfig": ".eslintrc.json"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config packages/ir/vitest.config.ts",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": [
    "scope:ir",
    "type:lib"
  ]
}
