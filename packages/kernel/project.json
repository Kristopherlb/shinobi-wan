{
  "name": "kernel",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/kernel/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsup",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config packages/kernel/vitest.config.ts",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": ["scope:kernel", "type:lib"]
}
